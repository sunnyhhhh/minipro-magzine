/* pages/index.wxss */
@import "./common-list.wxss";
page{
    background-color: #eee;
}
.container{
    width: 100%;
    background-color: #eee;
}

.container .recommend-container{
    background-color: #fff;
}

.container .recommend-article{
    display: flex;
    flex-direction: column;
    align-items: center;
    font-family: monospace;
}

.container .recommend-container{
    margin: 30rpx;
}

.container .recommend-article text:nth-child(1){
    font-size: 50rpx;
    font-weight: bolder;
    font-family: Arial, Helvetica, sans-serif;
    /* background-color: #abcdef; */
    padding: 40rpx;
}

.container .recommend-article .recommend-title{
    padding: 20rpx;
}

.container .recommend-article image{
    width: 650rpx;
}

.container .recommend-container .recommend-box{
    padding: 20rpx;
}

.container .recommend-container .recommend-box text{
    border: 3rpx solid black;
    font-family: 'Courier New', Courier, monospace;
    margin: 15rpx;
    display: inline-block;
}

.container .recommend-container .recommend-box text:nth-child(1){
    background-color: #000;
    color: #fff;
}

