/* pages/articleDetail/articleDetail.wxss */

/* @import "../common-list.wxss"; */

.container{
    margin-top: 20rpx;
    padding: 10rpx;
}

.title-container text{
    font-size: 48rpx;
}

.authorAndDate text{
    font-size: 28rpx;
    color: #666;
    margin-right: 20rpx;
}

.authorAndDate{
    margin-top: 20rpx;
}

.authorAndDate text:first-of-type{
    color: #576b95;
}

.content-container{
    margin-top: 30rpx;
    text-indent: 2em;
}

.content-container text{
    font-size: 32rpx;
    line-height: 32rpx;
}

.read-container{
    margin-top: 30rpx;
    margin-bottom: 30rpx;
}

.read-container text{
    font-size: 20rpx;
    margin-right: 20rpx;
}

/* 轮播图样式 */
.banner{
    width: 750rpx;
    height: 500rpx;
}

.banner image{
    width: 100%;
    height: 100%;
}



.media-container{
    /* width: 750rpx;
    height: 500rpx; */
}

.media-container .myVideo{
    width: 750rpx;
    height: 500rpx;
}

/* 遮罩层 */
.mask{
    width: 750rpx;
    height: 500rpx;
}

.start{
    width: 80rpx;
    height: 80rpx;
    background-color: rgba(0,0,0,.5);
    position: absolute;
    top: calc(50% - 40rpx);
    left: calc(50% - 40rpx);
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 50%;
}

.start::after{
    content: '';
    clear: both;
}

/* 音乐播放组件 */
.audio-container{
    display:flex;
    align-items: center;
    padding: 30rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
    background-color: #fdfdfd;
    border:1rpx solid #f2f2f2;
    border-radius: 4rpx;
}

.audio-controller{
    margin-right: 40rpx;
}

.audio-controller image{
    width: 80rpx;
    height: 80rpx;
}

.audio-title text{
    font-size: 36rpx;
}

.audio-from text{
    font-size: 28rpx;
    color: #666;
}

.audio-progress{
    position: relative;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    /* width: 520rpx; */
}

.progress-circle{
    position: absolute;
    top: 50%;
    margin-top: -10rpx;
    width: 20rpx;
    height: 20rpx;
    border-radius: 50%;
    background-color: #00b26a;
}

.audio-time{
    display: flex;
    justify-content: space-between;
}

.audio-time text{
    color: #666;
    font-size: 24rpx;
}